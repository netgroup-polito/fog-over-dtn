{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "interface": {
      "type": "object",
      "properties": {
        "node-id": {
          "type": "string"
        },
        "if-name": {
          "type": "string"
        }
      },
      "required": [
        "if-name"
      ],
      "additionalProperties": false
    },
    "gre": {
      "type": "object",
      "properties": {
        "local-ip": {
          "type": "string"
        },
        "remote-ip": {
          "type": "string"
        },
        "ttl": {
          "type": "string"
        },
        "gre-key": {
          "type": "string"
        },
        "secure": {
          "type": "boolean"
        }
      },
      "required": [
        "remote-ip",
        "local-ip",
        "gre-key"
      ],
      "additionalProperties": false
    },
    "host-stack": {
      "type": "object",
      "properties": {
        "configuration": {
          "enum": [
            "DHCP",
            "static",
            "pppoe"
          ]
        },
        "IPv4": {
          "type": "string"
        }
      },
      "required": [
        "configuration"
      ],
      "additionalProperties": false
    },
    "internal": {
      "type": "object",
      "properties": {
        "internal-group": {
          "type": "string"
        },
        "node-id": {
          "type": "string"
        }
      },
      "required": [
        "internal-group"
      ],
      "additionalProperties": false
    },
    "vlan": {
      "type": "object",
      "properties": {
        "vlan-id": {
          "type": "string"
        },
        "if-name": {
          "type": "string"
        },
        "node-id": {
          "type": "string"
        }
      },
      "required": [
        "vlan-id",
        "if-name"
      ],
      "additionalProperties": false
    },
    "match": {
      "type": "object",
      "properties": {
        "hard_timeout": {
          "type": "string"
        },
        "ether_type": {
          "type": "string"
        },
        "vlan_id": {
          "type": "string"
        },
        "vlan_priority": {
          "type": "string"
        },
        "arp_spa": {
          "type": "string"
        },
        "arp_tpa": {
          "type": "string"
        },
        "source_mac": {
          "type": "string"
        },
        "dest_mac": {
          "type": "string"
        },
        "source_ip": {
          "type": "string"
        },
        "dest_ip": {
          "type": "string"
        },
        "tos_bits": {
          "type": "string"
        },
        "source_port": {
          "type": "string"
        },
        "dest_port": {
          "type": "string"
        },
        "protocol": {
          "type": "string"
        },
        "port_in": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "action": {
      "type": "object",
      "properties": {
        "output_to_port": {
          "type": "string"
        },
        "set_vlan_id": {
          "type": "string"
        },
        "set_vlan_priority": {
          "type": "string"
        },
        "push_vlan": {
          "type": "string"
        },
        "pop_vlan": {
          "type": "boolean"
        },
        "set_ethernet_src_address": {
          "type": "string"
        },
        "set_ethernet_dst_address": {
          "type": "string"
        },
        "set_ip_src_address": {
          "type": "string"
        },
        "set_ip_dst_address": {
          "type": "string"
        },
        "set_ip_tos": {
          "type": "string"
        },
        "set_l4_src_port": {
          "type": "string"
        },
        "set_l4_dst_port": {
          "type": "string"
        },
        "output_to_queue": {
          "type": "string"
        },
        "drop": {
          "type": "boolean"
        },
        "output_to_controller": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "gui-position":{
        "x": "string",
        "y": "string"
    }
  },
  "properties": {
    "forwarding-graph": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "unify-monitoring": {
          "type": "string"
        },
        "domain": {
          "type": "string"
        },
        "VNFs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "functional-capability": {
                "type": "string"
              },
              "vnf_template": {
                "type": "string"
              },
              "domain": {
                "type": "string"
              },
            "gui-position":{
                "x": "string",
                "y": "string"
            },
              "ports": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "mac": {
                      "type": "string"
                    },
                    "unify-ip": {
                      "type": "string"
                    },
                    "trusted": {
                      "type": "boolean"
                    },
                    "gui-position":{
                        "x": "string",
                        "y": "string"
                    }
                  },
                  "required": [
                    "id"
                  ],
                  "additionalProperties": false
                }
              },
              "unify-control": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "host-tcp-port": {
                      "type": "integer"
                    },
                    "vnf-tcp-port": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "host-tcp-port",
                    "vnf-tcp-port"
                  ],
                  "additionalProperties": false
                }
              },
              "unify-env-variables": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "variable": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "variable"
                  ],
                  "additionalProperties": false
                }
              },
              "groups": {
                "type": "array"
              }
            },
            "required": [
              "id",
              "functional-capability",
              "ports"
            ],
            "additionalProperties": false
          }
        },
        "end-points": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "domain": {
                "type": "string"
              },
              "gui-position":{
                "x": "string",
                "y": "string"
              },
              "type": {
                "enum": [
                  "host-stack",
                  "internal",
                  "interface",
                  "interface-out",
                  "gre-tunnel",
                  "vlan"
                ]
              },
              "host-stack": {
                "$ref": "#/definitions/host-stack"
              },
              "internal": {
                "$ref": "#/definitions/internal"
              },
              "interface": {
                "$ref": "#/definitions/interface"
              },
              "interface-out": {
                "$ref": "#/definitions/interface"
              },
              "gre-tunnel": {
                "$ref": "#/definitions/gre"
              },
              "vlan": {
                "$ref": "#/definitions/vlan"
              }
            },
            "required": [
              "id"
            ],
            "additionalProperties": false
          }
        },
        "big-switch": {
          "type": "object",
          "properties": {
            "flow-rules": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "priority": {
                    "type": "integer"
                  },
                  "match": {
                    "$ref": "#/definitions/match"
                  },
                  "actions": {
                    "type": "array",
                    "items": {
                      "$ref": "#/definitions/action"
                    }
                  }
                },
                "required": [
                  "id",
                  "priority",
                  "match",
                  "actions"
                ]
              }
            }
          },
          "required": [
            "flow-rules"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "forwarding-graph"
  ],
  "additionalProperties": false
}
